<Window x:Class="Dolgova.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dolgova"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Icon="/image/Новые технологии.ico"
        Title="MainWindow" Height="569" Width="800">
    <Grid>
    <Image Source="/image/Новые технологии.png" Margin="11,10,658,456" />
        <ListBox x:Name="partnerList" Margin="10,112,10,89" Background="#FFBBDCFA" FontFamily="Bahnschrift Light SemiCondensed" HorizontalContentAlignment="Stretch">
        
        <ListBox.ItemTemplate>
            <DataTemplate>
                <Border BorderThickness="0,0,0,1" BorderBrush="Gray" Margin="0,0,0,10" Padding="5">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Right"
                               Text="{Binding TotalCost, StringFormat=Стоимость: {0:F2} р}"
                               FontWeight="Bold" VerticalAlignment="Top" Margin="5,0,0,0"/>

                        <StackPanel>

                                <TextBlock FontWeight="Bold" FontSize="14" Margin="0,0,0,10">
    <Run Text="{Binding Type}"/>
    <Run Text=" | "/>
    <Run Text="{Binding Name}"/>
                                </TextBlock>


                            <TextBlock Margin="0,0,0,5"
                                   Text="{Binding LegalAddress, StringFormat=Юр. адрес: {0}}"/>

                                <TextBlock Margin="0,0,0,5"
                                   Text="{Binding Phone, StringFormat=Телефон: {0}}"/>
                                <TextBlock>
                            <Run Text="Рейтинг: "/>
                            <Run Text="{Binding Rating, StringFormat={}{0}}"/>
                            </TextBlock>

                        </StackPanel>

                    </DockPanel>
                </Border>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
        <Label Content="Партнеры" HorizontalAlignment="Left" Margin="324,34,0,0" VerticalAlignment="Top" FontSize="22" FontFamily="Bahnschrift Light SemiCondensed"/>
        <Button Content="Расчитать количество материала" HorizontalAlignment="Left" Margin="420,499,0,0" VerticalAlignment="Top"   Width="197" Height="30" FontFamily="Bahnschrift Light SemiCondensed" Background="#FF0C4882" Foreground="White" Click="Button_Click" />
        <Button Content="Добавить партнера" HorizontalAlignment="Left" Margin="640,499,0,0" VerticalAlignment="Top"  Click="AddPartnerButton_Click" Width="150" Height="30" FontFamily="Bahnschrift Light SemiCondensed" Background="#FF0C4882" Foreground="White" />
        <Button Content="Каталог продукции" HorizontalAlignment="Left" Margin="250,499,0,0" VerticalAlignment="Top"  Width="150" Height="30" FontFamily="Bahnschrift Light SemiCondensed" Background="#FF0C4882" Foreground="White" Click="Button_Click_1" />


    </Grid>
</Window>
